<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="100dp"
        android:layout_margin="@dimen/default_margin"
        android:layout_width="100dp">

    <ImageView
            android:id="@+id/categoryImg"
            android:layout_width="@dimen/img_icon_width"
            android:layout_height="@dimen/img_icon_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/categoryName"
            android:gravity="center"
            android:textAppearance="@style/CategoryTextAppearance"
            style="@style/CategoryTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/categoryImg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>