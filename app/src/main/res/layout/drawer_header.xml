<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/highest_heights"
        android:background="@drawable/menu_pattern"
        android:padding="@dimen/padding_small" >

    <androidx.cardview.widget.CardView
            android:layout_width="@dimen/logo_navbar_circle_height"
            android:layout_height="@dimen/logo_navbar_circle_height"
            android:layout_centerHorizontal="true"
            android:shape="ring"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            app:cardBackgroundColor="@color/tomato"
            app:cardCornerRadius="@dimen/logo_navbar_corner_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3">
        <ImageView
                android:layout_height="@dimen/logo_navbar_height"
                android:layout_width="match_parent"
                android:src="@drawable/logo_navbar"
                android:contentDescription="@null"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/drawerHeaderTxt"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:textAppearance="@style/LogoMenuTextAppearance"
            style="@style/LogoMenuTextAppearance"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>